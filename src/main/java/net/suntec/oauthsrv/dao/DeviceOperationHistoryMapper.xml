<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="net.suntec.oauthsrv.dao.DeviceOperationHistoryMapper">

	<parameterMap id="BaseParameterMap"
		type="net.suntec.oauthsrv.dto.DeviceOperationHistory">
		<parameter property="appType" jdbcType="VARCHAR" javaType="String" />
		<parameter property="deviceNo" jdbcType="VARCHAR" javaType="String" />
		<parameter property="appVersion" jdbcType="VARCHAR"
			javaType="String" />
		<parameter property="creationDate" jdbcType="VARCHAR"
			javaType="String" />
	</parameterMap>

	<resultMap id="BaseResultMap"
		type="net.suntec.oauthsrv.dto.DeviceOperationHistory">
		<id column="app_type" property="appType" jdbcType="VARCHAR" />
		<result column="device_no" property="deviceNo" jdbcType="VARCHAR" />
		<result column="app_version" property="appVersion" jdbcType="VARCHAR" />
		<result column="creation_date" property="creationDate"
			jdbcType="VARCHAR" />
	</resultMap>


	<sql id="Base_Column_List">
		app_type,
		device_no,
		app_version,
		creation_date
	</sql>
	<!-- <sql id="Where_Clause"> <trim prefix="WHERE" prefixOverrides="and"> 
		<if test="appType != null and appType != ''">and app_type LIKE #{appType}</if> 
		<if test="deviceNo != null and deviceNo != ''">and device_no LIKE #{deviceNo}</if> 
		<if test="appVersion != null and appVersion != ''">and app_version LIKE #{appVersion}</if> 
		<if test="creationDate != null and creationDate != ''">and creation_date 
		LIKE #{creationDate}</if> </trim> </sql> -->

	<sql id="Where_Clause">
		<trim prefix="WHERE" prefixOverrides="and">
			<if test="appType != null and appType != ''"><![CDATA[and app_type LIKE CONCAT( '%' , #{appType} , '%' )]]></if>
			<if test="deviceNo != null and deviceNo != ''"><![CDATA[and device_no LIKE CONCAT( '%' , #{deviceNo} , '%' )]]></if>
			<if test="appVersion != null and appVersion != ''"><![CDATA[and app_version LIKE CONCAT( '%' , #{appVersion} , '%' )]]></if>
			<if test="creationDate != null and creationDate != ''"><![CDATA[and creation_date LIKE CONCAT( '%' , #{creationDate} , '%' )]]></if>
		</trim>
	</sql>

	<select id="selectByPrimaryKey" resultMap="BaseResultMap"
		parameterType="java.lang.String">
		select
		<include refid="Base_Column_List" />
		from DEVICE_OPERATION_HISTORY
		where app_type = #{appType,jdbcType=VARCHAR}
	</select>

	<delete id="deleteByPrimaryKey" parameterType="java.lang.String">
		delete from DEVICE_OPERATION_HISTORY
		where app_type = #{appType,jdbcType=VARCHAR}
	</delete>

	<insert id="insert" parameterType="net.suntec.oauthsrv.dto.DeviceOperationHistory">
		insert into DEVICE_OPERATION_HISTORY (
		<include refid="Base_Column_List" />
		)
		values (
		#{appType,jdbcType=VARCHAR},
		#{deviceNo,jdbcType=VARCHAR},
		#{appVersion,jdbcType=VARCHAR},
		date_trunc('second', now() )
		)
	</insert>

	<update id="updateByPrimaryKey" parameterType="net.suntec.oauthsrv.dto.DeviceOperationHistory">
		update DEVICE_OPERATION_HISTORY
		set
		device_no = #{deviceNo,jdbcType=VARCHAR},
		app_version = #{appVersion,jdbcType=VARCHAR}
		where app_type = #{appType,jdbcType=VARCHAR}
	</update>

	<select id="select" resultMap="BaseResultMap"
		parameterType="net.suntec.oauthsrv.dto.DeviceOperationHistory">
		select
		<include refid="Base_Column_List" />
		from DEVICE_OPERATION_HISTORY
		<include refid="Where_Clause" />
	</select>

	<select id="count" resultType="java.lang.Integer"
		parameterType="net.suntec.oauthsrv.dto.DeviceOperationHistory">
		select
		count(1)
		from DEVICE_OPERATION_HISTORY
		<include refid="Where_Clause" />
	</select>
</mapper>
